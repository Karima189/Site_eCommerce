{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse - Chic Mademoiselle {% endblock %}

{% block body %}
    <div class="container-fluid mt-5 ml-6 pb-6">
        <h2 class="mb-4 text-center">Enregistrer une adresse de livraison</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                     {{ form_errors(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.adressePostale, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.adressePostale, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                     {{ form_errors(form.adressePostale) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.codePostal, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.codePostal, {'attr': {'class': 'form-control', 'placeholder': 'Code postal'}}) }}
                     {{ form_errors(form.codePostal) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.ville, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                     {{ form_errors(form.ville) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.pays, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.pays, {'attr': {'class': 'form-control', 'placeholder': 'Pays'}}) }}
                     {{ form_errors(form.pays) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.numeroTelephone, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.numeroTelephone, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                     {{ form_errors(form.numeroTelephone) }}
                </div>
                {# <div class="form-group mt-3 mb-3" id="registration_form_register">
                    {{ form_widget(form.submit)}}
                </div> #}
                 <div class="form-group mt-3 mb-3">
                    {{ form_widget(form.submit, {'label': 'Payer la commande', 'attr': {'class': 'bouton_adresse_commande'}})}}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}



